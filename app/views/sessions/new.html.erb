<div class="users-new-wrapper">
  <div class = "row">
    <div class="container">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-black">ログイン</h1>

        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス, class: "text-black" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: "text-black" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <%= f.submit "ログインする", class: 'btn btn-primary btn-block' %>
        <% end %>
        
    </div>
    </div>
  </div>
</div>

