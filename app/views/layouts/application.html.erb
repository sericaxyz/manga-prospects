<!DOCTYPE html>
<html>
  <head>
    <title>Manga Prospects</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <meta name="" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
    <!-- Navigation bar from here --!>
    <header>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                 aria-expanded="false">
                <button type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar">&nbsp;</span>
                    <span class="icon-bar">&nbsp;</span>
                    <span class="icon-bar">&nbsp;</span>
                </button>
                <!--<a class="navbar-brand" href="/">Manga Prospects</a>-->
                <%= link_to 'Manga Prospects', root_path, class: "navbar-brand" %>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <!--<li><a href="#">このサイトについて</a></li>-->
                    <li class="nav-item">
                      <%= link_to "このサイトについて",pages_aboutus_path, class: "nav-link" %>
                    </li>
                    <% if ! logged_in? %>
                      <li>
                        <%= link_to "ユーザー登録",users_new_path, class: "nav-link" %>
                      </li>
                      <li class="nav-item">
                        <%= link_to "ログイン",login_path, class: "nav-link" %>
                      </li>
                    <% else %>
                      <li>
                        <%= link_to "ユーザー登録",root_path, class: "nav-link" %>
                      </li>
                      <li class="nav-item">
                        <%= link_to "ログイン",root_path, class: "nav-link" %>
                      </li>
                    <% end %>
                    <% if logged_in? %>
                      <li class="nav-item">
                        <%= link_to logout_path,method: :delete do%>ログアウト<% end %>
                      </li>
                    <% else %>
                      <li class="nav-item">
                        <%= link_to "ログアウト",root_path,　class: "nav-link" %>
                      </li>
                    <% end %>
                    <!--<li><a href="#">管理者へ連絡</a></li>-->
                    <li class="nav-item active">                    
                     <%= link_to "管理者へ連絡",inquiry_path, class: "nav-link active" %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
  
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
  
    <%= yield %>
    
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
    
  </body>
</html>
