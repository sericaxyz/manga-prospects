<div class="material-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">漫画素材投稿</h1>
        <%= form_for @material do |f| %>
          <div class="form-group">
            <%= f.label :素材ファイル %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :説明 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <% end %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>