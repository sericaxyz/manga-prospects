# 以下、「Ruby on Rails 4 でお問い合わせフォーム」対応

<div class="page-header">
  <h1>入力内容確認</h1>
</div>

<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th>お名前</th>
      <td>
        <%= f.text_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    </tr>
      <th>メールアドレス</th>
      <td>
        <%= f.text_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>メッセージ内容</th>
      <td>
        <%= f.text_field :message %>
        <%= simple_format(@inquiry.message) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信',:class => 'btn btn-primary' %>
<% end %>
